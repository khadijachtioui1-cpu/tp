#include <stdio.h>

// Fonction pour calculer le PGCD (Algorithme d'Euclide)
int pgcd(int a, int b) {
    int temp;
    while (b != 0) {
        temp = a % b;
        a = b;
        b = temp;
    }
    return a;
}

// Fonction pour calculer le PPCM
int ppcm(int a, int b) {
    return (a * b) / pgcd(a, b);
}

int main() {
    int a, b;

    // Saisie des deux nombres
    printf("Entrez le premier nombre : ");
    scanf("%d", &a);

    printf("Entrez le deuxi√®me nombre : ");
    scanf("%d", &b);

    // Affichage du PPCM
    printf("Le PPCM de %d et %d est : %d\n", a, b, ppcm(a, b));

    return 0;
}
